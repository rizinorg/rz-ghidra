
FROM debian:buster

RUN apt-get update
RUN apt-get -y install git g++ cmake pkg-config flex bison python3 python3-pip ninja-build qt5-default libqt5svg5-dev qttools5-dev libssl-dev openssl-dev && \
	pip3 install meson

RUN cd /root && \
	git clone --depth 1 https://github.com/rizinorg/rizin && \
	cd rizin && \
	meson build --prefix=/usr && \
	ninja -C build && \
	ninja -C build install

RUN cd /root && \
	git clone --recurse-submodules --depth 1 https://github.com/rizinorg/cutter && \
	cd cutter && \
	cmake -Bbuild -GNinja -DCUTTER_USE_BUNDLED_RIZIN=OFF -DCMAKE_INSTALL_PREFIX=/usr && \
	ninja -C build && \
	ninja -C build install

CMD []

